<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/row_padding"
    android:paddingBottom="@dimen/row_padding">

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="@dimen/user_img"
        android:layout_height="@dimen/user_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/row_padding"
        android:layout_marginRight="@dimen/row_padding"
        android:contentDescription="@string/user_profile_image_desc" />

    <TextView
        android:id="@+id/userResultName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/userImg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        tools:textColor="@android:color/black" />

    <TextView
        android:id="@+id/userResultPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/userImg"
        android:layout_below="@id/userResultName"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp" />

</RelativeLayout>